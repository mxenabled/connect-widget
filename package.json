{
  "name": "connect-widget",
  "private": true,
  "description": "A simple ui library for React",
  "version": "0.0.1",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 35",
    
    "preview": "vite preview",
    "prepare": "husky"
  },
  "dependencies": {
    "@kyper/button": "^4.0.0",
    "@kyper/text": "^3.0.0",
    "@kyper/tokenprovider": "^4.0.0",
    "@reduxjs/toolkit": "^2.2.7",
    "@types/node": "^22.1.0",
    "axios": "^1.7.4",
    "bowser": "^2.11.0",
    "date-fns": "^3.6.0",
    "eslint-config-mx": "^4.0.0",
    "gettext.js": "^2.0.3",
    "js-sha256": "^0.11.0",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.2",
    "redux-observable": "^3.0.0-rc.2",
    "vite-plugin-dts": "^4.0.0-beta.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "msw": "^2.3.5",
    "prettier": "3.3.3",
    "typescript": "^5.2.2",
    "vite": "^5.3.4"
  },
  "lint-staged": {
    "**/*": [
      "npm run lint",
      "npx prettier . --write"
    ]
  },
  "volta": {
    "node": "20.12.0",
    "npm": "10.5.0"
  }
}
